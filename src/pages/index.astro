<style>
  .wave{
  position: relative;
  width: 100%;
  height: 100%;
  background: #3e79cb;
  border-radius: 50%;
  box-shadow: inset 0 0 50px rgba(0,0,0,.5);
}
.wave:after, .wave:before{
  content: "";
  position: absolute;
  width: 200%;
  height: 200%;
  top: 0;
  left: 50%;
  transform: translate(-50%,-75%);
  background: #000;
}
.wave:before{
  border-radius: 45%;
  background: rgb(17, 154, 145);
  animation: animate 5s linear infinite;
}
.wave:after{
  border-radius: 40%;
  background: rgba(17, 154, 145, 0.55);
  animation: animate 5s linear infinite;
}
@keyframes animate {
  0%{
    transform: translate(-50%,-75%) rotate(0deg);
  }
  100%{
    transform: translate(-50%,-75%) rotate(360deg);
  }
}
.faq-cta {
  --primary-color: rgb(27, 42, 40);
  --secondary-color: #fff;
  --hover-color: #111;
  --arrow-width: 10px;
  --arrow-stroke: 2px;
  box-sizing: border-box;
  border: 0;
  border-radius: 20px;
  color: var(--secondary-color);
  padding: 1em 1.8em;
  background: var(--primary-color);
  display: flex;
  transition: 0.2s background;
  align-items: center;
  gap: 0.6em;
  font-weight: bold;
}

.faq-cta .arrow-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

.faq-cta .arrow {
  margin-top: 1px;
  width: var(--arrow-width);
  background: var(--primary-color);
  height: var(--arrow-stroke);
  position: relative;
  transition: 0.2s;
}

.faq-cta .arrow::before {
  content: "";
  box-sizing: border-box;
  position: absolute;
  border: solid var(--secondary-color);
  border-width: 0 var(--arrow-stroke) var(--arrow-stroke) 0;
  display: inline-block;
  top: -3px;
  right: 3px;
  transition: 0.2s;
  padding: 3px;
  transform: rotate(-45deg);
}

.faq-cta:hover {
  background-color: var(--hover-color);
}

.faq-cta:hover .arrow {
  background: var(--secondary-color);
}

.faq-cta:hover .arrow:before {
  right: 0;
}
</style>
